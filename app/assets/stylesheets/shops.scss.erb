/* shops index */

.shop{
    margin-bottom: 20px;
}

.shop-index {
  background-attachment: fixed;
  background-size: cover;
  background-color: rgba(255,255,255,0.3);
  background-position: center;
  text-align: center;
}

.shops-heading {
  font-weight: 300;
  margin: 60px 40px 20px;
  font-size: 48px;
  color: #bcc8d4;
}

.shops {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
    align-content: space-around;
  width: 100%;
}
.shops shop {
  width: 30%;
}
.shop_img {
  padding: 0;
  height: 100px;
  width: 100px;
}
.shop-title {
  margin: 0 0 8px;
  padding: 0 0 80px;
  font-size: 32px;
}
.link-to-article {
  margin: 0 0 20px;
}

/* shops show */

.shop-show {
  background-attachment: fixed;
  background-size: cover;
  background-color: rgba(255,255,255,0.3);
  background-blend-mode:lighten;
  background-position: center;
}
.shop-return{
    font-size: 16px;
}
.shop_image {
  padding: 0;
  height: 100px;
  width: 100px;
}
