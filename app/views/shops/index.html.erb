<div class="main shops-index">
  <div class="container">
    <h1 class="shops-heading">ショップ一覧</h1>
    <div class="shops">
      <% @shops.each do |shop| %>
        <a class="link-to-show">
            <div class="shop">
                <div class="shop-img">
                <%= link_to(image_tag(shop.image_name), "/shops/#{shop.id}") %>
                </div>
                <h2 class="shop-title">
                <%= link_to(shop.name, "/shops/#{shop.id}") %>
                </h2>
            </div> <!-- /.shop -->
        </a>
      <% end %>
    </div> <!-- /.shops -->
  </div> <!-- /.container -->
</div>
